{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generate build files in Debug mode."
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake configure (Debug)",
            "detail": "Invoke CMake to build the tlgconv executable."
        },
        {
            "label": "roundtrip test",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/test/run_roundtrip.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "cmake build",
            "problemMatcher": []
        }
    ]
}
